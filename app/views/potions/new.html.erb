<%= stylesheet_link_tag 'new-potion', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="new-potion-form-container">
  <h1>Add New Potion</h1>

  <%= form_with(model: @potion, local: true, multipart: true, class: "new-potion-form") do |form| %>
    <% if @potion.errors.any? %>
      <div id="error_explanation" class="form-errors">
        <h2><%= pluralize(@potion.errors.count, "error") %> prohibited this potion from being saved:</h2>
        <ul>
          <% @potion.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-row">
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>
      <div class="field">
        <%= form.label :origin %>
        <%= form.text_field :origin %>
      </div>
    </div>

    <div class="form-row">
      <div class="field">
        <%= form.label :effect %>
        <%= form.text_area :effect, rows: 3 %>
      </div>
      <div class="field">
        <%= form.label :duration %>
        <%= form.text_field :duration %>
      </div>
    </div>

    <div class="field">
      <%= form.label :category %>
      <%= form.text_field :category %>
    </div>

    <div class="field">
      <%= form.label :recommended_age, "Recommended Age" %>
      <%= form.select :recommended_age, (5..50).to_a.append('50+'), {}, { class: 'select-field' } %>
    </div>

    <div class="field">
      <%= form.label :stock, "Inventory" %>
      <%= form.number_field :stock%>
    </div>


    <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, step: 0.01 %>
  </div>

    <div class="field">
  <%= form.label :images %>
  <%= form.file_field :images, multiple: true, accept: "image/jpeg,image/gif,image/png,image/webp" %>
  <small class="file-formats-info">Allowed formats: jpg, gif, png, webp</small>
</div>

    

    <!-- Repeat for other fields as needed, adjusting into form-rows -->

    <div class="actions">
      <%= form.submit "Save Potion", class: "submit-btn" %>
      <%= link_to 'Cancel', vendor_dashboard_path, class: 'cancel-btn' %>
    </div>
  <% end %>
</div>
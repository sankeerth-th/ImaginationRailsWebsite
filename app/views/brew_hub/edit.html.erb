<!-- app/views/brewhub/edit.html.erb -->

<div class="edit-post-container">
  <h1 class="edit-post-title">Edit Post</h1>

  <%= bootstrap_form_with model: @post, url: brew_hub_post_path(@post), method: :patch, data: { turbo: false }, html: { class: 'edit-post-form' } do |form| %>
    <div class="form-group">
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.text_area :content, rows: 16, class: 'form-control' %>
    </div>

    <%= form.submit 'Update Post', class: 'btn btn-primary my-3' %>
  </div>
<% end %>

<p>
  <%= link_to 'Back', brew_hub_post_path(@post), class: 'btn btn-back' %>
</p>
</div>
